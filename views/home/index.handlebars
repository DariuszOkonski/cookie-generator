<h1>Configure your cookie</h1>

<div class="cookies-container">
    <div class="cookie-border">
        <h2>{{upper "Select cookie base"}}</h2>
        {{> base-selector}}

        <h2>{{upper "Select your favorite addons"}}</h2>
        <div>
            {{#each addons}}
                {{#if (isNotInArray @root.cookie.addons this.[0])}}
             
                    <a class="cookie-button" href="/configurator/add-addons/{{this.[0]}}">Select {{this.[0]}} for {{this.[1]}} PLN</a>
                {{/if}}
            {{/each}}
        </div>
    </div>
    <div class="cookie-border">
        {{#if cookie.base}}
            {{> cookie-preview}}
        {{else}}
            <p><strong>Please select base of your cookie to se it's preview and price summary</strong></p>
            {{> base-selector}}
        {{/if}}
    </div>
</div>

{{#if cookie.base}}
    {{> addons}}
    <a href="/order/summary" class="btn-go-home">Order now!</a>
{{/if}}